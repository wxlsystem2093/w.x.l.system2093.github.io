<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>w.x.l.system2093 // ALLIANCE PROTOCOL</title>
  <style>
    body {
      background-color: black;
      color: #00ff9c;
      font-family: 'Courier New', Courier, monospace;
      white-space: pre-wrap;
      padding: 40px;
      font-size: 16px;
    }

    .cursor {
      display: inline-block;
      width: 10px;
      background-color: #00ff9c;
      animation: blink 1s steps(1) infinite;
      margin-left: 2px;
    }

    @keyframes blink {
      0%, 50% { opacity: 1; }
      50.01%, 100% { opacity: 0; }
    }
  </style>
</head>
<body>
  <div id="terminal"></div>
  <script>
    const lines = [
      'w.x.l.system2093 // ALLIANCE PROTOCOL',
      '',
      '[ location: MANHATTAN ]',
      '[ status: SYNCHRONIZING... ]',
      '',
      'ALLIANCE INDEX:',
      '   ALAÏA',
      '   AMAN',
      '   APPLE',
      '   BYREDO',
      '   RIMOWA',
      '   TIFFANY & CO',
      '',
      '[ frequency access granted ]'
    ];

    const terminal = document.getElementById('terminal');
    let i = 0;
    let j = 0;
    let currentLine = '';

    function type() {
      if (i < lines.length) {
        currentLine = lines[i];
        if (j < currentLine.length) {
          terminal.innerHTML = terminal.innerHTML.slice(0, -1) + currentLine[j++] + '<span class="cursor">█</span>';
          setTimeout(type, 40);
        } else {
          terminal.innerHTML = terminal.innerHTML.slice(0, -1) + currentLine + '\n' + '<span class="cursor">█</span>';
          i++;
          j = 0;
          setTimeout(type, 150);
        }
      }
    }

    terminal.innerHTML = '<span class="cursor">█</span>';
    type();
  </script>
</body>
</html>
